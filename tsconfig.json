{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6", "dom", "es7","es2017"],
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "types": ["jest"],
    "skipLibCheck": true,
    "outDir": "./build",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "skipLibCheck": true
}
